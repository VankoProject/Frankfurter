<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/favoritePairLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/common_app_margin_16dp"
    android:orientation="horizontal">

    <com.kliachenko.presentation.core.views.CustomTextView
        android:id="@+id/currencyPairTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/common_app_margin_16dp"
        android:textSize="@dimen/title_size_24sp"
        tools:text="USD/EUR" />

    <com.kliachenko.presentation.core.views.CustomTextView
        android:id="@+id/rateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_app_margin_16dp"
        android:textSize="@dimen/title_size_24sp"
        tools:text="@string/_1_01_tools" />

</LinearLayout>